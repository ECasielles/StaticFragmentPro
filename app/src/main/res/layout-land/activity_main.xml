<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment
        android:id="@+id/fragmentA"
        android:name="com.example.usuario.staticfragment.FragmentA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragmentB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragmenta"
        />

    <fragment
        android:id="@+id/fragmentB"
        android:name="com.example.usuario.staticfragment.FragmentB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragmentC"
        app:layout_constraintStart_toEndOf="@+id/fragmentA"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragmentb"
        />

    <fragment
        android:id="@+id/fragmentC"
        android:name="com.example.usuario.staticfragment.FragmentC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragmentB"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragmentc"
        />

</android.support.constraint.ConstraintLayout>